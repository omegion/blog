$vssue-theme-color = #363636

@import '~vssue/src/styles/index'
@import '~github-markdown-css/github-markdown.css'

.vssue
  padding 0

  .vssue-header, .vssue-new-comment
    border-bottom: 2px solid #f5f5f5;

    .vssue-header-powered-by
      display: none


  .vssue-body
    .vssue-comment-avatar
      img
        border-radius 100%

  .vssue-button
    font-weight inherit
    border-radius .5em
    background-color: white;
    border-color: #dbdbdb;
    border-width: 1px;
    justify-content: center;
    padding-bottom: calc(0.5em - 1px);
    padding-left: 1em;
    padding-right: 1em;
    padding-top: calc(0.5em - 1px);
    text-align: center;
    white-space: nowrap;

  .vssue-pagination
    .vssue-pagination-select
      background-color: white;
      border-radius: 0.5rem;
      color: #363636;
      -webkit-appearance: none;
      align-items: center;
      border: 1px solid #dbdbdb;
      border-radius: 4px;
      box-shadow: none;
      display: inline-flex;
      justify-content: flex-start;
      line-height: 1.5;
      padding-bottom: calc(0.5em - 1px);
      padding-left: calc(0.75em - 1px);
      padding-top: calc(0.5em - 1px);
      position: relative;
      vertical-align: top;
      padding-right: 2.5em;

  .vssue-icon
    vertical-align .3em
    fill $vssue-text-light-color

  .vssue-comment-reaction-number
    color $vssue-text-light-color
